extends layout

block content
  h1 New Book

  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li= error.message

  form(action="/books/new" method="post" novalidate)
    p
      label(for="title") Title
      input#title(type="text" name="title" value=book.title required aria-required="true")
    p
      label(for="author") Author
      input#author(type="text" name="author" value=book.author required aria-required="true")
    p
      label(for="genre") Genre
      input#genre(type="text" name="genre" value=book.genre)
    p
      label(for="year") Year
      input#year(type="number" name="year" value=book.year min="0" max="9999" step="1" pattern="\d{4}")
    p
      input(type="submit" value="Create New Book")
    p
      a.button(href="/books") Cancel
